<div class='form-section'>
  <div class="f-title">
      <div class="f-abs">
        <h2>INSCRIPCIÓN</h2>
      </div>
  </div>
  <div class='form'>
    <%= form_with(model: @user, local: true) do |form| %>
      <div class='form-speach'>
        <p>La participación es gratuita previa inscripción.</p>
      </div>


      <div class="field">
        <%= form.label :name, 'NOMBRES:', class: 'text' %>
        <%= form.text_field :name, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.label :last_name, 'APELLIDOS:', class: 'text' %>
        <%= form.text_field :last_name, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.label :dni, 'DNI:', class: 'text' %>
        <%= form.text_field :dni, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.label :email, 'CORREO:', class: 'text' %>
        <%= form.text_field :email, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.label :company, 'INSTITUCIÓN:',class: 'text' %>
        <%= form.text_field :company, class: 'input-field'%>
      </div>

      <div class="field">
        <%= form.label :position, 'CARGO:',class: 'text' %>
        <%= form.text_field :position, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.label :city, 'CIUDAD:', class: 'text' %>
        <%= form.text_field :city, class: 'input-field' %>
      </div>

      <div class="field">
        <%= form.check_box :author %>
        <%= form.label :authorisation, 'Autorizo a compartir datos privados, tanto por los gremios organizadores como por los auspiciadores.', class: 'text-check'%>
      </div>

      <div class="div-button">
        <%= form.submit 'INSCRIBIRME', class: 'button'%>
      </div>



    <% end %>
  </div>
</div>

